#include <iostream> //подключение директив препроцессора для потока ввода-вывода
using namespace std; //определение пространства используемых имен

int main() //главная функция
{
	setlocale(0, "RUS"); //подключение кириллицы
	cout << "Определить, чему будет равно выражение ++i*i++ при начальном i=1. Проверить результат программой.\n\n";  //вывод сообщения для диалога с пользователем
	int i, a, b, res; //резервирование памяти
	i = 1; //инициализация переменной i
	a = ++i; //присваивание значения a, используя операцию префиксного инкремента
	b = i++; //присваивание значения b, используя операцию постфиксного инкремента
	res = a * b; //присваивание значения res
	cout << "++i * i++ = "; //вывод сообщения для диалога с пользователем
	cout << res << "\n"; //вывод результата
	return 0; //возвращение 0 (если программа вернула 0, то она сработала корректно)
}
