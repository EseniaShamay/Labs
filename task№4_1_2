#include <iostream> //подключение директив препроцессора для потока ввода-вывода
using namespace std; //определение пространства используемых имен

int main() //главная функция
{
    setlocale(0, "RUS"); //подключение кириллицы
    cout << "Считая, что кубический фут равен 7.481 галлона, напишите программу, \n" <<
        "запрашивающую у пользователя число галлонов и выводящую на экран эквивалентный объем в кубических футах.\n"; //вывод сообщения для диалога с пользователем
    float foot; //резервирование памяти
    int gal; //резервирование памяти
    cout << "Введите число галлонов: "; //вывод сообщения для диалога с пользователем
    cin >> gal; // ввод, извлечение из потока
    cout << "\n1 кубический фут = 7.481 галлона \n\n"; //вывод сообщения для диалога с пользователем
    foot = gal / 7.481; // присваивание значения foot
    cout << gal << " галлонов" << " = " << foot << " кубических футов" << "\n"; //вывод результата и сообщения для диалога с пользователем
    return 0; //возвращение 0 (если программа вернула 0, то она сработала корректно)
}
