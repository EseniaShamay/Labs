#include <iostream> //подключение директив препроцессора для потока ввода-вывода
using namespace std; //определение пространства используемых имен

int main() //главная функция
{
	setlocale(0, "RUS"); //подключение кириллицы
	cout << "Напишите программу, генерирующую следующий вывод\n 10\n 20\n 19\nИспользуйте представление числа 10 в виде целой константы.\n" <<
		"Для вывода 20 используйте присваивание, для вывода 19 – операцию декремента.\n\n";  //вывод сообщения для диалога с пользователем
	int first, second, third; //резервирование памяти
	first = 10; // инициализация переменной first
	cout << first << "\n"; //вывод результата
	second = first * 2;  //присваивание значения second
	cout << second << "\n"; //вывод результата
	third = --second;  //присваивание значения third
	cout << third; //вывод результата
	return 0; //возвращение 0 (если программа вернула 0, то она сработала корректно)
}
