#include <iostream> //подключение директив препроцессора для потока ввода-вывода
using namespace std; //определение пространства используемых имен

int main() //главная функция
{
    setlocale(0, "RUS"); //подключение кириллицы
    cout << "Написать программу, которая переводит температуру из градусах по Фаренгейту(F)\n" <<
        "в градусы Цельсия(C) по формуле : C = 5 / 9 * (F - 32).\n\n"; //вывод сообщения для диалога с пользователем
    float F, C; //резервирование памяти
    cout << "Введите температуру в градусах по Фаренгейту(F): "; //вывод сообщения для диалога с пользователем
    cin >> F; // ввод, извлечение из потока
    C = (F - 32) * 5 / 9; //присваивание значения C
    cout << "\nТемпература в градусах Цельсия: " << C << "\n"; //вывод результата
    return 0; //возвращение 0 (если программа вернула 0, то она сработала корректно)
}
