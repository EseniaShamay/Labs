#include <iostream> //подключение директив препроцессора для потока ввода-вывода
using namespace std; //определение пространства используемых имен

int main() //главная функция
{
    setlocale(0, "RUS"); //подключение кириллицы
    cout << "Заданы моменты начала и конца некоторого промежутка времени в часах, минутах и секундах (в пределах одних суток).\n" <<
        "Написать программу для нахождения продолжительности этого промежутка в тех же единицах.\n\n"; //вывод сообщения для диалога с пользователем
    int hour1, min1, sec1, hour2, min2, sec2, hour, min, sec; //резервирование памяти
    cout << "Введите начало временного промежутка(часы, минуты, секунды): \n"; //вывод сообщения для диалога с пользователем
    cin >> hour1 >> min1 >> sec1; // ввод, извлечение из потока
    cout << "Введите конец временного промежутка(часы, минуты, секунды): \n"; //вывод сообщения для диалога с пользователем
    cin >> hour2 >> min2 >> sec2; // ввод, извлечение из потока
    hour = ((hour2 * 3600 + min2 * 60 + sec2) - (hour1 * 3600 + min1 * 60 + sec1)) / 3600; //присваивание значения hour
    min = (((hour2 * 3600 + min2 * 60 + sec2) - (hour1 * 3600 + min1 * 60 + sec1)) - (hour * 3600)) / 60; //присваивание значения min
    sec = ((hour2 * 3600 + min2 * 60 + sec2) - (hour1 * 3600 + min1 * 60 + sec1)) - hour * 3600 - min * 60; //присваивание значения sec
    cout << "\nВременной промежуток: " << hour << " ч " << min << " мин " << sec << " сек " << "\n"; //вывод результата
    return 0; //возвращение 0 (если программа вернула 0, то она сработала корректно)
}
