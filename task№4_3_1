#include <iostream> //подключение директив препроцессора для потока ввода-вывода
using namespace std; //определение пространства используемых имен

int main() //главная функция
{
    setlocale(0, "RUS"); //подключение кириллицы
    cout << "Напишите фрагмент программы для умножения двух чисел и вывода на экран результата.\n" <<
        "Числа задает пользователь.\n\n"; //вывод сообщения для диалога с пользователем
    double num1, num2; //резервирование памяти
    cout << "Введите 2 числа, произведение которых нужно найти: \n"; //вывод сообщения для диалога с пользователем
    cin >> num1 >> num2; // ввод, извлечение из потока
    cout << "\nРезультат: " << num1 << " * " << num2 << " = " << num1 * num2 << "\n"; //вывод результата
    return 0; //возвращение 0 (если программа вернула 0, то она сработала корректно)
}
