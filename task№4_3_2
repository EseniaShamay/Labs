#include <iostream>//подключение директив препроцессора для потока ввода-вывода
#include <string>

using namespace std; //определение пространства используемых имен

int main() //главная функция
{
    setlocale(0, "RUS"); //подключение кириллицы
    cout << "Напишите фрагмент программы, в которой вводятся пять символов,\n" << 
        "и выводятся на экран в обратной последовательности.\n\n"; //вывод сообщения для диалога с пользователем
    string str; //резервирование памяти
    cout << "Введите 5 символов: \n"; //вывод сообщения для диалога с пользователем
    cin >>str; // ввод, извлечение из потока
    cout << "\nРезультат: " << "\n"; //вывод результата
    for (int i = str.size() - 1; i >= 0; i--) //цикл, с помощью которого переворачиваем строку
    {
        cout << str[i]; //вывод результата
    }
    return 0; //возвращение 0 (если программа вернула 0, то она сработала корректно)
}
